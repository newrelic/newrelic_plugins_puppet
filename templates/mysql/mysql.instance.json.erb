[
  <%- @servers.each do |server| %>
  {
    <%- if server['name'] %>    "name"    : "<%= server['name'] %>", <%- else %>    "name"    : "<%= server['host'] %>", <%- end %>
    "host"    : "<%= server['host'] %>",
    <%- if server['metrics'] %>    "metrics"    : "<%= server['metrics'] %>", <%- else %>    "metrics"    : "<%= mysql_metrics %>", <%- end %>
    <%- if server['user'] %>    "user"    : "<%= server['user'] %>", <%- else %>    "user"    : "<%= mysql_user %>", <%- end %>
    <%- if server['passwd'] %>    "passwd"  : "<%= server['passwd'] %>" <%- else %>    "passwd"    : "<%= mysql_passwd %>", <%- end %>
  },
  <%- end %>
]
